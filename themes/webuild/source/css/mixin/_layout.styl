@import "./_breakPoint.styl";
@import "./_varible.styl";
html {
    animation: fadein 2s;
}
@keyframes fadein {
    from {
        opacity: 0;
        visibility: hidden;
    }

    to {
        opacity: 1;
        visibility: visible;
    }
}
:root {
    scroll-padding-top: $header-max-height + 10px;
}

h2, p {
    margin-top: 1rem;
    margin-bottom: 1.5rem;
}

a {
    color: $theme-secondary;
    text-decoration: none;
    transition: all 0.5s;

    &:hover {
        transition: all 0.5s;
        color: $theme-dark;
    }
}

h1, h2, h3, h4, h5 {
    font-family: 'Noto Sans TC', sans-serif;
}

* .token {
    font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
}

h1 {
    font-size: $font-size * 7;
}

h2 {
    font-size: $font-size * 6;
}

h3 {
    font-size: $font-size * 5;
}

h4 {
    font-size: $font-size * 4;
}

h5 {
    font-size: $font-size * 3;
}

p {
    font-size: $font-size * 2;
}

body {
    background-color: $theme-background-color;
}

footer {
    background: #36403A;
    padding: 10px 0;

    >p {
        font-size: 12px;
        color: white;
        text-shadow: 1px 3px 3px rgba(0, 0, 0, 0.3);
    }
}

.container {
    animation: fall 2s;
}
@keyframes fall {
    from {
        margin-top: 0;
    }

    to {
        margin-top: ($header-max-height + 50) px;
    }
}
header {
    display: flex;
    height: $header-max-height;
    width: 100%;
    padding: 10px 20px;
    background-color: #dcf2e6;
    position: fixed;
    z-index: 1000;
    box-shadow: 1px 2px 8px rgba(0, 0, 0, 0.5);
}
.brandBox h1 {
    font-weight: 400;
    color: $theme-dark;
}

.leftAside {
    position: fixed;
    background: white;
    box-shadow: 1px 3px 5px rgba(0, 0, 0, 0.2);
    width: 100%;
    display: none;
    padding-top: $header-max-height;
    padding-left: 15px;
    padding-right: 15px;
    padding-bottom: 15px;
    z-index: 1;
    >ul{
        padding: 0;
        display: flex;
        flex-direction: column;
    }
}
.rightAside {
    display: none;
}



nav {
    top: $header-max-height;
    >ul{
        padding: 20px 0px;
        >li{
            list-style: none;
            >h4{
                list-style: none;
                margin: 0px;
                >a{
                     padding: 5px 0;
                     display: flex;
                     justify-content: space-between;
                     text-decoration: none;
                     letter-spacing: 0.083em;
                     border-bottom: 1px solid rgba(0, 0, 0, 0.1);
                     &:hover {
                             cursor: pointer;
                             }
                }
            }
        }
    }
}

#barBtn {
    margin-right: 15px;
    padding: 5px;

    >i {
        font-size: 24px;
    }
}

.mobileBox {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

.outter-wrap {
    min-height: 100vh;
    padding: 0;
    display: flex;
}
.category-list{
    padding-left: 10px;
    list-style-type: '';
    padding-bottom: 10px;

    li:not(.toc>li) {
        display: flex;
    }

    li {
        font-size: 16px;
        justify-content: space-between;

        a {
            display: block;
            width: 100%;
            color: grey;
            font-weight: 700;
        }

        span {
            font-size: 12px;
            margin-left: 5px;
            // background: black;
            color: gray;
            padding: 0px 1.5px;
            border-radius: 5px;
        }

        ol {
            padding-left: 1rem;
        }
    }
}

.toc {
     padding-left: 0px;
     padding-bottom: 10px;
     overflow-y: scroll;
     max-height: 80vh;
     ol{
        padding-left: 1rem;
     }
     .toc-item{
        color: gray;
        list-style:none;
        padding: 1.5px 0px;
    }
     .toc-level-2{
        font-weight: 700;
        font-size: 16px;
    }
     .toc-level-3{
        font-weight: 500;
        font-size: 15px;
    }
     .toc-level-4{
        font-weight: 300;
        font-size: 14px;
    }
