@import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@700&display=swap');
@import "./mixin/_varible.styl";

@import "./mixin/_post.styl"
@import "./mixin/_index.styl";
@import "./mixin/_layout.styl";







.search-form {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    width: 100%;

    >input {
        position: relative;
        flex: 1 1 auto;
        width: 1%;
        min-width: 0;
        display: block;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: 0.375rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
}

.card-title {
    margin-bottom: 0;
}


#tagsBtn, #categoriesBtn {
    &:hover {
        .fa-solid {
            color: black;
        }
    }
}

.category-list-item {
    padding: 3px 0;

    &:hover {
        a, span {
            color: black;
        }
    }
}

.input-group {
    input, button {
        height: 35px;
        line-height: 1px;
        font-size: 11px;
    }
}

.input-group-input {
    &:focus {
        border-color: #a5a5a5;
        // box-shadow: 0 0 0 0.25rem rgba(92, 92, 92, 0.2);
        box-shadow: none;
    }

    &:-webkit-autofill, &:-webkit-autofill:hover, &:-webkit-autofill:focus, &:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px white inset !important;
    }
}

.input-group-submit {
    border-radius: 0.375rem !important;
    border-top-left-radius: 0 !important;
    border-bottom-left-radius: 0 !important;
    background-color: #808080;

    &:hover {
        transition: all 0.5s;
    }
}

.rightAside {
    >section {
        >h4 {
            padding: 5px 0;
            display: flex;
            justify-content: space-between;
            text-decoration: none;
            letter-spacing: 0.083em;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }
    }
}

.toc {
    *>span {
        &:hover {
            color: black;
        }
    }
}

.postNext {
    >h4 {
        margin-top: unset;
        margin-bottom: unset;

        >a {
            color: #808080;

            &:hover {
                color: black;

                >i {
                    color: black;
                }
            }
        }
    }
}

.wl-comment {
    padding: 15px;
    background: #fff;
    border-radius: 10px;
    box-shadow: 1px 3px 5px rgba(92, 92, 92, 0.2);
}

.wl-meta-head, .wl-cards, .wl-loading, .wl-empty, .wl-power {
    padding: 15px;
    background: #fff;
    box-shadow: 1px 3px 5px rgba(92, 92, 92, 0.2);

    &:not(.wl-cards, .wl-loading, .wl-empty) {
        border-radius: 10px;
    }
}

.wl-meta-head {
    border-bottom-left-radius: unset !important;
    border-bottom-right-radius: unset !important;
}

.wl-power {
    margin-bottom: 2rem;
    border-radius: 10px;
    border-top-left-radius: unset !important;
    border-top-right-radius: unset !important;
}

.postArticle {

    a {
        word-wrap:break-word;
    }

    h1, h2, h3, h4, h5 {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;

        &:hover {
            >.headerlink {
                &::after {
                    content: '#';
                    color: rgb(130, 170, 255);
                    padding: 0 0.3rem;
                }
            }
        }
    }

    h1 {
        font-size: $font-size * 10;
    }

    h2 {
        font-size: $font-size * 9;
        padding-bottom: 0.5rem;
        margin-top: 4rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    h3 {
        font-size: $font-size * 8;
        padding-bottom: 0.5rem;
        margin-top: 3rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    h4 {
        font-size: $font-size * 7;
    }

    h5 {
        font-size: $font-size * 6;
    }

    p {
        font-size: $font-size * 5;
    }

    .infoBox>p {
        font-size: 12px;
    }

    .postArticleContent {
        details {
            border-bottom: 1px dashed black;
            margin-bottom: 2rem;

            >summary {
                padding: 0.8rem;
                font-weight: 500;
            }

            >* {
                font-size: 0.8rem;
            }

            ol, ul {
                border-top: 1px dashed black;

                li {
                    margin-bottom: 1rem;
                }
            }
        }

        ol, ul {
            padding: 1rem 2rem;
            margin-bottom: unset;

            li {
                font-size: 1rem;
            }
        }

        p, li {
            >a {
                color: rgb(130, 170, 255);

                &:hover {
                    color: rgb(130, 170, 255);
                    text-decoration: underline;
                }
            }
        }

        blockquote {
            border-left: solid #ccc;
            font-size: 0.8rem;
            padding: 0px 0.8rem;
            font-weight: 500;

            >p {
                margin: 0;
                font-size: 16px;
            }
        }
    }
}

.hamburger {
    color: #979797 !important;
}

@media (min-width: 1080px) {
    .postArticle {
        padding: 15px 40px;
    }

    nav {
        position: sticky;
    }

    .rightAside {
        display: block;
        padding-top: $header-max-height;
    }

    .rightAside>section {
        border-left: 1px dashed rgba(0, 0, 0, 0.3);
        min-width: 285px;
        position: sticky;
        top: $header-max-height + 50px;
        padding-left: 15px;
        padding-right: 15px;

        >ol {
            padding: 0px;
            list-style: none;
        }
    }

    .main {
        margin-top: $header-max-height + 50px;
    }

    .leftAside {
        max-width: 275px;
        position: relative;
        display: block;
        animation: leftopen 2s;
    }

    @keyframes leftopen {
        from {
            max-width: 0;
        }

        to {
            max-width: 275px;
        }
    }

    .waterfall {
        margin: 0 auto;
        column-count: 3;
        column-gap: 0px;
        counter-reset: item-counter;
    }

    #barBtn {
        display: none;
    }

    header {
        padding: 10px 10px 10px 10px;
        background-color: $theme-primary;
        position: fixed;
    }
}

@media (min-width: 1400px) {
    .postWrap {
        max-width: 980px;
    }

    .waterfall {
        margin: 0 auto;
        column-count: 3;
        column-gap: 0px;
        counter-reset: item-counter;

        .main {
            max-width: 1080px;
        }
    }

    header {
        padding: 15px;
    }
}
@media (min-width: 2200px) {
    .main {
        max-width: 1980px;
    }
}
